{
  "bazel.projectview.open": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/*.crswap": true,
    ".eclipse": false,
    ".vscode": false,
    "src": false,
    "bazel-bin": false,
    "bazel-java-one": false,
    "bazel-out": false,
    "bazel-testlogs": false,
    "bazel-LearningBazelJavaVSC": false,
    ".git": false,
    ".devcontainer": false,
    "app": false,
    "lib": false
  },
  "java.format.settings.google.extra": "--aosp", // For 4 instead of 2 spaces!
  "java.format.settings.google.version": "1.19.2",
  // https://github.com/salesforce/bazel-vscode-java/blob/main/docs/troubleshoot.md#lightweight-java-mode
  "java.server.launchMode": "Standard",
  "[java]": {
    "editor.tabSize": 4,
    // Format Java using https://github.com/google/google-java-format,
    // via https://github.com/JoseVSeb/google-java-format-for-vs-code
    "editor.defaultFormatter": "josevseb.google-java-format-for-vs-code"
  }
}
